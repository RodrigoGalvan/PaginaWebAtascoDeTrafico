@model UserLogin

<div class="container-fluid ">
    <div class="row align-items-center">
        <div class="col-sm-6">
            <h3  class="align-self-center p-5 display-3" style="font-family: Rockwell; text-align:center;"> Login </h3>
        </div>

        <form method="post" class="col-sm-6">

            <div class="form-group col-12 font-weight-bold">
                <br />
                <h1 class="col-12" style="text-align: center; font-family: Rockwell;"> Ingrese sus datos aqui </h1>
                <br />
                <div class="row">
                    <div class="col-1 align-self-center" style="text-align:center;">
                        <i for="usuario" class="bi bi-person" style="font-size: 2rem; color: black;"></i>
                    </div>
                    <div class="col-11 align-self-center">
                        <input asp-for="Usuario" name="usuario" class="form-control " type="text" placeholder="Usuario" />
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-1">
                        <i for="contrasena" class="bi bi-lock-fill" style="font-size: 2rem; color: black;"></i>
                    </div>
                    <div class="col-11">
                        <input asp-for="Contrasena" name="contrasena" class="form-control" type="password" placeholder="Contraseña" />
                    </div>
                </div>
                <br />
                <div class="form-group col-12 text-center align-self-center">
                    <input type="submit" value="Login" class="btn btn-outline-primary mb-2" />
                </div>
            </div>
        </form>
    </div>
</div>