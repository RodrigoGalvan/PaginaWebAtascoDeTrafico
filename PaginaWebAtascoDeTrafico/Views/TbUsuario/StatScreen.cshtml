@model TbUsuario

@{
    var user = Model;
}
<div class="container">
    <div class="row col-12">
        <h1 class="display-2" style="font-family: Rockwell"> <small>Bienvenido </small> @user.Usuario</h1>
    </div>
    <br />
    <br />
    
    <p style="font-family: Rockwell">En este sitio es donde podrás editar tu cuenta, ver tus puntos que has ganado cada partida y finalmente se da la opción de borrar la cuenta.</p>
    <br />
    <div class="row col-12">
        <div class="align-bottom">
            <h2 style="font-family: Rockwell"> Menú de opciones: </h2>
            <br />
            <br />
            <a class="btn btn-info text-center align-self-center btn-lg " style="font-family: Rockwell" role="button" aria-pressed="true" asp-controller="TbUsuario" asp-action="PuntuajeUsuario" asp-route-Id="@user.IdUsuario">Mi puntaje</a>
            <br />
            <br />
            <a class="btn btn-dark text-center align-self-center btn-lg " style="font-family: Rockwell" role="button" aria-pressed="true" asp-controller="TbUsuario" asp-action="Edit" asp-route-Id="@user.IdUsuario">Editar</a>
            <br />
            <br />
            <button type="button" class="btn btn-danger btn-lg" data-toggle="modal" style="font-family: Rockwell" data-target="#exampleModal">
                Borrar cuenta
            </button>
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel" style="font-family: Rockwell">¿Seguro que quiere borrar la cuenta?</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body" >
                            <p style="font-family: Rockwell">Si borra la cuenta todo será borrado incluyendo tu puntaje.</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-dark btn-lg" data-dismiss="modal" style="font-family: Rockwell">Cerrar</button>
                            <a class="btn btn-danger text-center align-self-center btn-lg " style="font-family: Rockwell" role="button" aria-pressed="true" asp-controller="TbUsuario" asp-action="Delete" asp-route-Id="@user.IdUsuario">Borrar cuenta</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
